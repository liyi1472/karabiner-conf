{
    "title": "输入法完美切换+",
    "rules": [{
        "description": "右Option => 中文输入法",
        "manipulators": [{
            "from": {
                "key_code": "right_option",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [{
                "select_input_source": {
                    "language": "zh-Hans"
                }
            }],
            "type": "basic"
        }]
    }]
}
